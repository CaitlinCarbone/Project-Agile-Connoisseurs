<div class="container">
  <div class="row my-5">
    <div class="col-12">
      <h1 class="text-center">Installation Portal</h1>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h2>Start An Installation</h2>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label for="newCustomer" class="form-label"><strong
              >Customer</strong></label>
            <select id="newCustomer" class="form-select">
              <option selected>Choose Customer</option>
              {{#each customers}}
                <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <label for="requiredPhotos" class="form-label"><strong>Required Photo
              Types</strong></label>
          <div id="requiredPhotos" class="mb-3">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="postInstallPhoto"
                checked
              />
              <label class="form-check-label" for="postInstallPhoto">
                Post-installation
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="preInstallPhoto"
              />
              <label class="form-check-label" for="preInstallPhoto">
                Pre-installation
              </label>
            </div>
          </div>
          <div class="mb-3">
            <label for="newNotes" class="form-label"><strong
              >Notes</strong></label>
            <textarea class="form-control" id="newNotes" rows="3"></textarea>
          </div>
          <button onClick="" class="btn btn-primary">Begin Install</button>
        </div>
      </div>
    </div>
    {{#each customers}}
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h2>Install for {{this.name}}</h2>
          </div>
          <div class="card-body">
            <p>Progress:</p>
            <p>Started</p>
            <p>Notes:</p>
            <p>N/A</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>